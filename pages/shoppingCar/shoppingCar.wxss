/* pages/shoppingCar/shoppingCar.wxss */

.top{
  height: 100rpx;
  text-align: center;
  border-bottom: 4rpx solid #eb4450;
  line-height: 100rpx; 
  font-size: 33rpx;
  color: #eb4450;
}

.main view:nth-child(1)>image{
  width: 70%;
  /* outline: solid rebeccapurple 3rpx; */
  /* height: 100px; */
  position: relative;
  left: 15%;
  /* top: 100rpx; */
  margin-top: 150rpx;
}

.main{
  text-align: center;
}

.main view:nth-child(2){
  font-size: 35rpx;
  margin: 5rpx 0;
}

.main view:nth-child(3){
  font-size: 30rpx;
  margin: 10rpx 0;
  color: #2d3436;
}

navigator{
  font-size: 30rpx;
  margin: 30rpx 0;
  color: aliceblue;
  background-color: #eb4450;
  width: 30%;
  position: relative;
  left: 35%;
  padding: 15rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
}

.bot{
  height: 100rpx;
  text-align: center;
  border-top: 2rpx solid rgb(182, 182, 182,0.5);
  line-height: 100rpx; 
  font-size: 33rpx;
  color: #eb4450;
  position: absolute;
  bottom: 0;
  width: 100%;
}

.bot>view:nth-child(3){
  height: 100rpx;
  background-color: #eb4450;
  width: 200rpx;
  text-align: center;
  color: aliceblue;
  z-index: 2;
}
.bot>view:nth-child(4){
  font-size: 30rpx;
  line-height: initial;
  padding-top: 15rpx;
  padding-right: 15rpx;
  color: #2d3436;
}
.bot :nth-child(1){
  margin-left: 10rpx;
}

.bot :nth-child(2){
  margin-left: 10rpx;
  color: #2d3436;
}

.address{
  font-size: 30rpx;
  padding: 10rpx 30rpx;
  color: #2d3436;
}
.address-nt{
  line-height: 45rpx;
}
.address-detail{
  line-height: 45rpx;
}

.block-list{
  display: flex;
}
.block-info{
  flex: 1;
  display: flex;
}
.aaa{
  margin: 20rpx;
}
.info-img{
  width: 180rpx;
}
.info-txt{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}
.info-name{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 30rpx;
}
.pr-price{
  color: #eb4450;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.pr-number{
  display: flex;
  justify-content: space-between;
}
.block-list{
  align-items: center;
  border-bottom: 2rpx solid #ccc;
}
.i-img{
  height: 180rpx;
}
.pr-num{
  margin-right: 30rpx;
}
.pr-num text{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
}
.pr-num .itemNum{
  border-color: #fff;
}